# Alle Server Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
ALLE_SERVER_DATABASE_URL=sqlite:./alle.db?mode=rwc

# Server Configuration
ALLE_SERVER_HOST=0.0.0.0
ALLE_SERVER_PORT=8000

# Environment
ALLE_SERVER_ENV=development

# Logging
ALLE_SERVER_LOG_LEVEL=info

# CORS (comma-separated origins)
ALLE_SERVER_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Security
ALLE_SERVER_JWT_SECRET=change-this-secret-in-production
ALLE_SERVER_JWT_EXPIRATION=86400

# Test Database URLs (for integration tests)
TEST_DATABASE_URL_POSTGRES=postgres://alle_test:test_password@localhost:5433/alle_test
TEST_DATABASE_URL_MYSQL=mysql://alle_test:test_password@localhost:3307/alle_test
