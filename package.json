{
    "name": "alle",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "predev": "bun run kill-ports",
        "dev": "concurrently -n server,client -c blue,green \"bun run server\" \"bun run client\"",
        "client": "bun --cwd packages/client dev",
        "server": "bun --cwd packages/server dev",
        "kill-ports": "kill $(lsof -ti:3000,4000) 2>/dev/null || true",
        "format": "biome format --write .",
        "format:check": "biome format .",
        "lint": "biome lint --write .",
        "lint:check": "biome lint .",
        "check": "biome check --write .",
        "check:ci": "biome ci .",
        "type-check": "bun run type-check:shared && bun run type-check:server && bun run type-check:client",
        "type-check:client": "tsc --noEmit -p packages/client/tsconfig.json",
        "type-check:server": "tsc --noEmit -p packages/server/tsconfig.json",
        "type-check:shared": "tsc --noEmit -p packages/shared/tsconfig.json",
        "validate": "bun run check:ci && bun run type-check",
        "test": "bun run test:unit",
        "test:unit": "bun run test:unit:shared && bun run test:unit:server && bun run test:unit:client",
        "test:unit:shared": "bun --cwd packages/shared test",
        "test:unit:server": "bun --cwd packages/server test",
        "test:unit:client": "bun --cwd packages/client test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "test:e2e": "playwright test --config tests/e2e/playwright.config.ts",
        "test:e2e:no-server": "playwright test --no-server --config tests/e2e/playwright.config.ts",
        "test:api": "cd tests/api && bru run --env local",
        "test:all": "concurrently -n api,e2e -c magenta,cyan \"bun run test:api\" \"bun run test:e2e:no-server\"",
        "storybook": "bun --cwd packages/client storybook",
        "prepare": "husky"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.11",
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "concurrently": "^9.2.1",
        "husky": "^9.1.7",
        "wait-on": "^9.0.3"
    }
}
